{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Subschema for plepiseq output, summary of predicted plasmids.",
  "$comment": "Schemat dla outputu, podsumowanie predykcji plazmidów.",
  "type": "object",
  "properties": {
    "status": {
      "type": "string",
      "enum": [
        "tak",
        "nie",
        "blad"
      ],
      "$comment": "Informacja, czy przewidziano jakiekolwiek plazmidy. Wymagany."
    },
    "error_message": {
      "type": "string",
      "minLength": 1,
      "$comment": "Dowolny tekst zwracany jako komunikat błędu podczas obliczeń. Wymagany, jeśli status to 'blad'."
    },
    "plasmids_data": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "plasmid_name": {
            "type": "string",
	    "minLength": 1,
            "$comment": "Nazwa plazmidu. Wymagany."
          },
          "sequence_similarity_to_reference_value": {
            "type": "number",
            "multipleOf": 0.01,
            "minimum": 0,
            "maximum": 100,
            "$comment": "Identyczność sekwencyjna między sekwencją znalezioną w próbce a sekwencją referencyjną."
          },
          "degree_of_overlap_with_reference_value": {
            "type": "number",
            "multipleOf": 0.01,
            "minimum": 0,
            "maximum": 100,
            "$comment": "Procent długości sekwencji referencyjnej zidentyfikowanej w próbce."
          },
          "contig_name": {
            "type": "string",
	    "minLength": 1,
            "$comment": "Identyfikator contigu, na którym zidentyfikowano plazmid."
          },
          "reference_accession_name": {
            "type": "string",
	    "minLength": 1,
            "$comment": "Accession ID sekwencji referencyjnej."
          }
        },
        "required": [
          "plasmid_name",
          "sequence_similarity_to_reference_value",
          "degree_of_overlap_with_reference_value",
          "contig_name",
          "reference_accession_name"
        ]
      }
    }
  },
  "required": [
    "status"
  ],
  "allOf": [
    {
      "if": {
        "properties": {
          "status": {
            "const": "tak"
          }
        }
      },
      "then": {
        "required": [
          "plasmids_data"
        ]
      },
      "else": {
        "required": [
          "error_message"
        ]
      }
    }
  ]
}
