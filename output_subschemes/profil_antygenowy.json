{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Subschema for plepiseq output, antigenic profile for Salmonella and Escherichia.",
  "$comment": "Schemat dla profilu antygenowego dla Salmoenlli (seqypersero i sistr) oraz Escherichia (ECTyper).",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "program_nazwa": {
        "type": "string",
        "enum": [
          "sistr",
          "seqsero",
          "ECTyper"
        ],
        "$comment": "Program uzywany do przewidywania profilu antygenowego. Wymagany"
      },
      "komunikat_bledu": {
        "type": "string",
        "$comment": "Dowlny tekst zwracany jako komunikat bledu podczas obliczen. Wymagany, jesli status to Blad"
      },
      "status": {
        "type": "string",
        "enum": [
          "Tak",
          "Nie",
          "Blad"
        ],
        "$comment": "informacja czy policzono profil, niepoliczono, zwrocnono blad. Wymagany."
      },
      "antygen_o": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "antygen_o_wartosc": {
              "type": "string"
            }
          },
          "$comment": "Wartosc antygenu o, podawany w postaci listy. Wymagany."
        }
      },
      "antygen_h1": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "antygen_h1_wartosc": {
              "type": "string"
            }
          }
        },
        "$comment": "Wartosc antygenu h1, podawany w postaci listy. Lista ma jeden element antygen_h1_wartosc. Wymagany, jesli program to seqsero lub sistr."
      },
      "antygen_h2": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "antygen_h2_wartosc": {
              "type": "string"
            }
          }
        },
        "$comment": "Wartosc antygenu h2, podawany w postaci listy. Lista ma jeden element antygen_h2_wartosc  Wymagany,jesli program to seqsero lub sistr."
      },
      "antygen_h": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "antygen_h_wartosc": {
              "type": "string"
            }
          }
        },
        "$comment": "Wartosc antygenu h, podawany w postaci listy. Lista ma jeden element antygen_h_wartosc. Wymagany,jesli program to Ectyper"
      },
      "serotyp_nazwa": {
        "type": "string",
        "$comment": "Nazwa zidentyfikowanego serotypu. Wymagany"
      }
    },
    "required": [
      "program_nazwa",
      "status"
    ],
    "allOf": [
      {
        "if": {
          "properties": {
            "status": {
              "const": "Tak"
            }
          }
        },
        "then": {
          "allOf": [
            {
              "required": [
                "antygen_o",
                "serotyp_nazwa"
              ]
            },
            {
              "if": {
                "properties": {
                  "program_nazwa": {
                    "const": "ECTyper"
                  }
                }
              },
              "then": {
                "required": [
                  "antygen_h"
                ]
              },
              "else": {
                "required": [
                  "antygen_h1",
                  "antygen_h2"
                ]
              }
            }
          ]
        },
        "else": {
          "required": [
            "komunikat_bledu"
          ]
        }
      }
    ]
  }
}
